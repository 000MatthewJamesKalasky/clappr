{
  "name": "@clappr/plugins",
  "version": "0.4.0",
  "description": "Main plugins for the Clappr project",
  "main": "./dist/clappr-plugins.js",
  "scripts": {
    "bundle-check": "ANALYZE_BUNDLE=true rollup -c",
    "release": "MINIMIZE=true rollup -c",
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "test": "NODE_ENV=test karma start --single-run",
    "test:watch": "NODE_ENV=test karma start --no-single-run --watch",
    "lint": "eslint *.js src/ test/",
    "lint:fix": "npm run lint -- --fix",
    "start": "rollup -c rollup.config.dev.js --watch"
  },
  "files": [
    "/dist",
    "/src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:clappr/clappr-plugins.git"
  },
  "author": "Globo.com",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/clappr/clappr-plugins/issues"
  },
  "homepage": "https://github.com/clappr/clappr-plugins",
  "peerDependencies": {
    "@clappr/core": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@clappr/core": "^0.4.5",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.3.0",
    "autoprefixer": "^9.7.3",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "cz-conventional-changelog": "^3.0.2",
    "directory-named-webpack-plugin": "^4.0.1",
    "eslint": "^6.8.0",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^4.4.1",
    "karma-chai-sinon": "^0.1.5",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^2.0.1",
    "karma-firefox-launcher": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-rollup-preprocessor": "^7.0.2",
    "lolex": "^5.1.2",
    "mocha": "^6.2.2",
    "node-sass": "^4.13.0",
    "postcss-url": "^8.0.0",
    "rollup": "^1.29.0",
    "rollup-plugin-analyzer": "^3.2.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-external-globals": "^0.5.0",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-named-directory": "^1.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-svg": "^2.0.0",
    "rollup-plugin-terser": "^5.1.3",
    "sinon": "^8.0.4",
    "sinon-chai": "^3.4.0",
    "yargs": "^15.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "**/*.spec.js",
      "node_modules"
    ]
  }
}
